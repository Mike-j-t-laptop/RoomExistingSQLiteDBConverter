<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/overall_padding"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorTextMainHeading"
        android:background="@color/colorMainHeadingBackground"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/overall_padding"
        android:paddingRight="@dimen/overall_padding"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="@string/assetlistviewheader"
            android:background="@color/colorAssetHeadingBackground"
            android:textColor="@color/colorTextMedium"
            android:layout_marginBottom="@dimen/no_margin"/>
        <Button
            android:id="@+id/refresh"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/refreshbutton">
        </Button>
    </LinearLayout>
    <ListView
        android:id="@+id/dbfileslist"
        android:layout_width="wrap_content"
        android:layout_weight="10"
        android:layout_height="@dimen/no_height"
        android:layout_marginTop="@dimen/no_margin"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:background="@color/colorAssetListBackground">
    </ListView>
    <LinearLayout
        android:id="@+id/convert_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/no_margin"
        android:visibility="gone"
        android:background="@color/colorConvertSectionBackground">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/no_width"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/convert_directory_label"
                />
            <EditText
                android:id="@+id/conversion_directory"
                android:layout_width="@dimen/no_width"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/no_width"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/convert_package_label"/>
            <EditText
                android:id="@+id/projectpackage"
                android:layout_width="@dimen/no_width"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/no_width"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/convert_safemode_label"/>
            <CheckBox
                android:id="@+id/safemode"
                android:layout_width="@dimen/no_width"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:checked="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/no_width"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/convert_entity_directory_label"/>
            <EditText
                android:id="@+id/conversion_entity_directory"
                android:layout_width="@dimen/no_width"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/no_width"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/convert_dao_subdirectory_label"/>
            <EditText
                android:id="@+id/conversion_dao_directory"
                android:layout_width="@dimen/no_width"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <Button
            android:id="@+id/convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/convertbutton" />
    </LinearLayout>
    <TextView
        android:id="@+id/selectedassetheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectedassetdbinfoheading"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginTop="@dimen/no_margin"
        android:background="@color/colorDatabaseInfoHeadingBackground"
        android:textColor="@color/colorTextMedium"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dbinfohdr"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="@dimen/no_height"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:background="@color/colorDatabaseInfoBackground">

        <TextView
            android:id="@+id/dbnamehdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/dbname"/>
        <TextView
            android:id="@+id/dbversionhdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbversion"/>
        <TextView
            android:id="@+id/dbdisksizehdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/dbdisksize"/>
        <TextView
            android:id="@+id/dbtablecounthdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbtablecount"/>
        <TextView
            android:id="@+id/dbtablecolumncounthdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbcolumncount"/>
        <TextView
            android:id="@+id/dbindexcounthdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbindexcount"/>
        <TextView
            android:id="@+id/dbforeignkeycounthdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbforeignkeycount"/>
        <TextView
            android:id="@+id/dbtriggercounthdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbtriggercount"/>
        <TextView
            android:id="@+id/dbviewcounthdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbviewcount"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dbinfo"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="@dimen/no_height"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:background="@color/colorDatabaseInfoBackground"
        >
        <TextView
            android:id="@+id/dbname"
            android:layout_width="@dimen/no_width"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextDark"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbversion"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbdisksize"
            android:layout_width="@dimen/no_width"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbtablecount"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbcolumncount"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbindexcount"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbforeignkeycount"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbtriggercount"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/dbviewcount"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_view_item_padding"
            android:textColor="@color/colorTextMedium"
            android:paddingStart="@dimen/inter_view_item_padding"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pathinfosection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="@dimen/no_height"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:background="@color/colorDatabaseInfoBackground">
        <TextView
            android:id="@+id/dbpathhdr"
            android:layout_width="@dimen/no_width"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dbpath"/>
        <TextView
            android:id="@+id/dbpath"
            android:layout_width="@dimen/no_width"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextMedium"/>
    </LinearLayout>
    <TextView
        android:id="@+id/dbentitieslisthdr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:textColor="@color/colorTextMedium"
        android:background="@color/colorEntityListHeadingBackground"/>
    <ListView
        android:id="@+id/dbentitieslist"
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="@dimen/no_height"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:background="@color/colorEntityListBackground">
    </ListView>
</LinearLayout>